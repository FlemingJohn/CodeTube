rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      function isOwner() {
        return request.auth.uid == userId;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isOwner();
      allow list: if false;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isOwner();
      allow delete: if isOwner();
    }

    match /users/{userId}/courses/{courseId} {
       function isCourseOwner() {
        return request.auth.uid == userId;
      }

      allow get: if isCourseOwner();
      allow list: if false;
      allow create: if isCourseOwner();
      allow update: if isCourseOwner();
      allow delete: if isCourseOwner();
    }

    match /users/{userId}/courses/{courseId}/chapters/{chapterId} {
       function isChapterOwner() {
        return request.auth.uid == userId;
      }

      allow get: if isChapterOwner();
      allow list: if false;
      allow create: if isChapterOwner();
      allow update: if isChapterOwner();
      allow delete: if isChapterOwner();
    }
  }
}